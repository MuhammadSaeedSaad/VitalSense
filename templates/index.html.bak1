<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>Bootstrap 101 Template</title>

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="bootstrap.min.css">


    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://cdn.jsdelivr.net/npm/html5shiv@3.7.3/dist/html5shiv.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/respond.js@1.4.2/dest/respond.min.js"></script>
    <![endif]-->
  </head>
  <body class="bg-success">
    <div class="col-8 offset-2">
        <div class="card">
            <div class="card-body">
                <h5>Chart</h5>
                <canvas id="myChart" width="200" height="100"></canvas>
            </div>
        </div>
    </div>

    <script src="jquery.min.js"></script>
    <script src="bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.1.1/chart.umd.js"></script>

    <script src="chart.min.js" type="module"></script>
    <script src="./math.min.js"></script>
    <script src="./mqtt.min.js"></script>
    <script>
        let dataPlot;
        const clientId = 'mqttjs_' + Math.random().toString(16).substr(2, 8);
        const options = {
            keepalive: 60,
            clientId: clientId,
            protocolId: 'MQTT',
            protocolVersion: 4,
            clean: true,
            reconnectPeriod: 1000,
            connectTimeout: 30 * 1000,
            username: "Funny8ee",
            password: "Funny8ee",
            will: {
                topic: 'WillMsg',
                payload: 'Connection Closed abnormally..!',
                qos: 0,
                retain: false
            },
            rejectUnauthorized: false
        }
        const client = mqtt.connect("WSS://e9079bc3a54a48bb859818346853e5d2.s2.eu.hivemq.cloud:8884/mqtt", options) // you add a ws:// url here
        client.subscribe("mqtt")

        client.on("message", function (topic, payload) {
            console.log(payload)
            alert([topic, payload].join(": "))
        });

        const ctx = document.getElementById('myChart');
        dataPlot = new Chart(ctx, {
                type: 'line',
                data: {
                labels: [1, 2, 3, 4, 5],
                datasets: [{
                    label: 'ECG',
                    data: [1, 2, 3, 4, 5],
                    borderWidth: 1,
                    borderColor: "#3e95cd"
                }]
                },
                options: {
                scales: {
                    y: {
                    beginAtZero: true
                    }
                }
                }
            });

        // client.publish("mqtt", "hello world!")
    </script>
  </body>
</html>